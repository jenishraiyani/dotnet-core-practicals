@model Practical_18.Models.StudentDto

<div class="modal fade" id="studentForm" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="studentFormLabel">Edit Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="student-form">
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="StudentId" class="form-control"  type="hidden"/>
                    <div class="form-group row mb-2">
                        <label asp-for="StudentName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="StudentName" class="form-control" />
                        </div>

                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                    <div class="form-group row mb-2">
                        <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" />
                        </div>

                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Phone" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Phone" class="form-control" />
                        </div>

                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>      
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" onclick="addStudentDetails(this.value)" value="Put">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
